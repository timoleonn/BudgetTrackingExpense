<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyBanksFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="My Banks"
        android:textColor="#3F51B5"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select your Banks from Settings to make the Buttons enable:"
        android:textSize="24sp" />

    <Button
        android:id="@+id/cbcyprus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="cyprus"
        android:text="Bank of Cyprus" />

    <Button
        android:id="@+id/cbhellenic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="hellenic"
        android:text="Hellenic Bank" />

    <Button
        android:id="@+id/cbalpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="alpha"
        android:text="Alpha Bank" />

    <Button
        android:id="@+id/cbastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="astro"
        android:text="AstroBank" />

    <Button
        android:id="@+id/rcb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="rcb"
        android:text="RCB Bank" />

</LinearLayout>