<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Settings">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Settings"
        android:textColor="#3F51B5"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Bright mode:"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Bright Mode:"
        android:textColor="@android:color/holo_red_dark"
        android:textOff="White"
        android:textOn="Dark" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which Currency do you want?"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rbGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/rbEuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Euro"
            android:textColor="@android:color/holo_red_dark" />

        <RadioButton
            android:id="@+id/rbDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dollars"
            android:textColor="@android:color/holo_red_dark" />

        <RadioButton
            android:id="@+id/rbPound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English Pound"
            android:textColor="@android:color/holo_red_dark" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In which Bank you have account:"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbCyprus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank of Cyprus"
        android:textColor="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbHellenic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hellenic Bank"
        android:textColor="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbRcb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RCB Bank"
        android:textColor="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbAstro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AstroBank"
        android:textColor="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbRevolut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Revolut"
        android:textColor="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbAlpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alpha Bank"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="submit"
        android:text="Submit"
        app:backgroundTint="#F44336" />
</LinearLayout>