<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetTrackingExpense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BudgetTrackingExpense.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BudgetTrackingExpense.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BudgetTrackingExpense.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CUSTOM AD TOAST -->
    <style name="adToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/purple_200</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_baseline_emoji_emotions_24</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">LONG</item>
        <item name="stGravity">top</item>
        <item name="cornerRadius">3dp</item>
    </style>

    <style name="customToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/light_gray</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@mipmap/ic_launcher_tick</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">10dp</item>
        <item name="stLength">LONG</item>
        <item name="stGravity">center</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!-- CUSTOM RATING BAR -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/teal_200</item>
    </style>
</resources>